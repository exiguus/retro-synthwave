{
  "name": "retro-synthwave",
  "version": "1.0.0",
  "description": "Render 3D animations with canvas 2d context",
  "prettier": "@boxine/prettier-config",
  "scripts": {
    "predev": "pnpm fetch:data",
    "serve": "NODE_ENV=development parcel serve ./src/index.html --no-cache",
    "dev": "pnpm serve",
    "start": "npm install && pnpm dev",
    "fetch:data": "node ./build",
    "build": "pnpm fetch:data && pnpm build:app && pnpm build:report",
    "build:app": "rm -rf ./dist/ && NODE_ENV=production parcel build ./src/index.html --dist-dir ./dist --no-cache --detailed-report 10 --reporter @parcel/reporter-bundle-analyzer --public-url /",
    "build:report": "mv ./parcel-bundle-reports/default.html ./dist/report.html && rm -rf ./parcel-bundle-reports",
    "format": "prettier --write \"**/*.{js,ts,tsx,css,html}\"",
    "test": "pnpm type-check",
    "type-check": "tsc --pretty --noEmit"
  },
  "keywords": [
    "canvas",
    "2D",
    "3D",
    "synthwave",
    "retro"
  ],
  "devDependencies": {
    "@boxine/prettier-config": "^2.0.0",
    "@parcel/compressor-brotli": "^2.9.3",
    "@parcel/compressor-gzip": "^2.9.3",
    "@parcel/config-default": "^2.9.3",
    "@parcel/reporter-bundle-analyzer": "^2.9.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.7",
    "parcel": "^2.9.3",
    "prettier": "^2.8.8",
    "prettier-plugin-style-order": "^0.2.2",
    "process": "^0.11.10",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "compress": {
    "test": "(.js|report.html)",
    "concurrency": 2,
    "gzip": {
      "enabled": true,
      "numiterations": 15,
      "blocksplitting": true,
      "blocksplittinglast": false,
      "blocksplittingmax": 15,
      "zlib": false,
      "zlibLevel": 9,
      "zlibMemLimit": 9
    },
    "brotli": {
      "enabled": true,
      "mode": 0,
      "quality": 11,
      "lgwin": 24,
      "enable_context_modeling": true
    },
    "compressOutput": false
  },
  "author": {
    "name": "Simon Gattner",
    "url": "https://gattner.name/",
    "twitter": "https://twitter.com/exiguus_"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exiguus/retro-synthwave.git"
  },
  "browserslist": {
    "production": [
      ">0.5% and last 2 versions",
      "not dead",
      "not ie <= 11",
      "not op_mini all",
      "not IE_Mob 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">= 18.16.0",
    "pnpm": ">= 8.6.12"
  },
  "engineStrict": true,
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "svgo"
      ],
      "allowedVersions": {
        "svgo": "2.8.0"
      }
    }
  }
}